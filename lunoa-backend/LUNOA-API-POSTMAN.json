              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "pdf_file",
                  "type": "file",
                  "src": "document.pdf"
                },
                {
                  "key": "collection",
                  "value": "user-documents"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/ai/upload-pdf",
              "host": ["{{base_url}}"],
              "path": ["ai", "upload-pdf"]
