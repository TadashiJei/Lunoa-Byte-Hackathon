        },
        {
          "name": "Text Moderation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"This is a sample text to moderate for inappropriate content.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ai/text-moderation",
              "host": ["{{base_url}}"],
